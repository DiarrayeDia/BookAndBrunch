{% extends 'admin/backoffice.html.twig' %}

{% block title %}Gestion des zones géographiques
{% endblock %}

{% block body %}
	<h1>Gestion des zones géographiques</h1>
	<main>
		<div class="container-fluid px-4">
			<h1 class="mt-4">Tables</h1>
			<ol class="breadcrumb mb-4">
				<li class="breadcrumb-item">
					<a href="index.html">Dashboard</a>
				</li>
				<li class="breadcrumb-item active">Tables</li>
			</ol>
			<div class="card mb-4">
				<div class="card-header">
					<i class="fas fa-table me-1"></i>
					DataTable Example
				</div>
				<div class="card-body">
					<table id="datatablesSimple">
						<div class="card-body">
							<a href="{{ path('area_add') }}" class="btn btn-primary">Ajouter</a>
						</div>
						<thead>
							<tr>
								<th>Id</th>
								<th>Nom</th>
								<th>Parent</th>
								<th>Livres</th>
								<th>Actions</th>
							</tr>
						</thead>
						<tfoot>
							<tr>
								<th>Id</th>
								<th>Nom</th>
								<th>Parent</th>
								<th>Livres</th>
								<th>Actions</th>
							</tr>
						</tfoot>
						<tbody>

							{% for area in areas %}
								<tr>
									<td>{{ area.id }}</td>
									<td>{{ area.name }}</td>
									<td>{{ area.parent }}</td>
									<td>Livres</td>
									<td>
										<a href="{{ path('area_update', {id: area.id}) }}" class="btn btn-primary">Modifier</a>
										<a href="{{ path('area_delete', {id: area.id}) }}" class="btn btn-danger btn-sm modal-trigger">Supprimer</a>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</main>
	<!-- Modal -->
	<div class="modal fade" id="modalDelete" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalLabel">Supprimer un article</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					...
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
					<a href="" class="btn btn-primary">Supprimer</a>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
{% block javascripts %}{% endblock %}
