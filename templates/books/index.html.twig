{% extends 'clean.html.twig' %}


{% block body %}
	<!-- Main Content-->
	<div class="container px-4 px-lg-5">
		<div class="row gx-4 gx-lg-5 justify-content-center">

			<div class="row">
				{% for book in books %}
					<div
						class="col-4">
						<!-- Post preview-->
						<div class="card mb-3">
							<h3 class="card-header">
								{{ book.title}}</h3>
							{{ dump(book) }}
							<div class="card-body">
								{% for authors in book.authors %}
									<h5 class="card-title">{{ authors.fullname}}</h5>
								{% endfor %}
								<h6 class="card-subtitle text-muted">{{ book.year}}</h6>
							</div>


							<img src="{{ asset('clean/covers/'~ book.cover)}}"/>

							<div class="card-body">
								<p class="card-text">{{ book.summary | u.truncate(100, '...')}}</p>
							</div>
							<div class="card-body">
								<a href="{{path('book_view', {slug: book.slug})}}" class="card-link">Card link</a>
								<a href="#" class="card-link">Another link</a>
							</div>
							<div class="card-footer text-muted">
								2 days ago
							</div>
							<!-- Divider-->

						</div>

					</div>

				{% endfor %}
			</div>
			<!-- Pager-->
			<div class="d-flex justify-content-end mb-4">
				<a class="btn btn-primary text-uppercase" href="#!">Older Posts â†’</a>

			</div>
		</div>

	</div>

{% endblock %}
